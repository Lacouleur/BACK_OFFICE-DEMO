{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "plugin:prettier/recommended" 
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "only-warn"
    ],
    "rules": {
        "no-console": 0,
        "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
        "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ]
        },
    "globals": {
        "BASE_URL": true,
        "HOST_URL": true
    }
}
